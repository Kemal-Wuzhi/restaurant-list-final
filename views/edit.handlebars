<form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST" class="w-50 ml-5 mt-5">

  <div class="form-group">
    <label for="name">name</label>
    <input type="text" class="form-control" id="name" name="name" value="{{restaurant.name}}" required>
  </div>

  <div class="form-group">
    <label for="name">name_en</label>
    <input type="text" class="form-control" id="name_en" name="name_en" value="{{restaurant.name_en}}" required>
  </div>

  <div class="form-group">
    <label for="category">Category</label>
    <input type="text" class="form-control" id="category" name="category" value="{{restaurant.category}}" required>
  </div>

  <div class="form-group">
    <label for="image">Picture</label>
    <input type="url" class="form-control" id="image" name="image" value="{{restaurant.image}}" required>
  </div>

  <div class="form-group">
    <label for="location">Address</label>
    <input type="text" class="form-control" id="location" name="location" value="{{restaurant.location}}" required>
  </div>

  <div class="form-group">
    <label for="phone">Phone</label>
    <input type="tel" class="form-control" id="phone" name="phone" value="{{restaurant.phone}}" required>
  </div>

  <div class="form-group">
    <label for="google_map">Google Maps</label>
    <input type="url" class="form-control" id="google_map" name="google_map" value="{{restaurant.google_map}}">
  </div>

  <div class="form-group">
    <label for="rating">Rating</label>
    <input type="number" class="form-control" id="rating" name="rating" value="{{restaurant.rating}}" min="1" max="5"
      step="0.1">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" id="description" name="description">{{restaurant.description}}</textarea>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>

  <form action="/">
    <button type="submit" class="btn btn-danger ml-2">Cancel</button>
  </form>

</form>